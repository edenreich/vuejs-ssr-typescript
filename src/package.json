{
  "name": "vuejs-ssr-typescript",
  "version": "1.0.0",
  "description": "Setup of VueJS running on express server using typescript",
  "main": "server.js",
  "scripts": {
    "start": "yarn package && APP_ENV=prod PORT=3000 node ../dist/server.js",
    "dev": "cross-env APP_ENV=dev PORT=3000 nodemon --exec 'ts-node' server.ts",
    "package": "yarn clean:dist && yarn clean:modules && yarn build && yarn install --production && cp -R node_modules ../dist/node_modules && cp package.json ../dist/package.json", 
    "build": "yarn clean:dist && yarn && tsc",
    "clean": "yarn clean:dist && yarn clean:modules",
    "clean:dist": "rm -rf ../dist/*",
    "clean:modules": "rm -rf ./node_modules"
  },
  "author": "Eden Reich <eden.reich@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "cross-env": "^7.0.0",
    "express": "^4.17.1",
    "vue": "^2.6.11",
    "vue-server-renderer": "^2.6.11"
  },
  "devDependencies": {
    "@types/express": "^4.17.2",
    "@types/vue": "^2.0.0",
    "nodemon": "^2.0.2",
    "ts-node": "^8.6.2",
    "typescript": "^3.7.5"
  }
}

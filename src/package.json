{
  "name": "vuejs-ssr-typescript",
  "version": "1.0.0",
  "description": "A simple vue ssr with typescript application",
  "main": "server.js",
  "scripts": {
    "start": "yarn package && APP_ENV=prod PORT=3000 node ../dist/server.js",
    "dev": "cross-env APP_ENV=dev PORT=3000 nodemon ts-node server.ts",
    "package": "yarn build && cp package.json ../dist/package.json && yarn --production --modules-folder ../dist/node_modules", 
    "build": "yarn clean && tsc",
    "clean": "rm -rf ../dist/*"
  },
  "author": "Eden Reich <eden.reich@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "cross-env": "^7.0.0",
    "express": "^4.17.1",
    "vue": "^2.6.11",
    "vue-server-renderer": "^2.6.11"
  },
  "devDependencies": {
    "@types/express": "^4.17.2",
    "@types/vue": "^2.0.0",
    "nodemon": "^2.0.2",
    "ts-node": "^8.6.2",
    "typescript": "^3.7.5"
  }
}
